{
  "name": "metronomy",
  "version": "0.9.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:dev": "jest --watch",
    "style": "import-sort -l '**/src/**/*.ts' && prettier --check '**/src/**/*.{css,ts}'",
    "style:fix": "import-sort --write '**/src/**/*.ts' && prettier --write '**/src/**/*.{css,ts}' && js-beautify '**/src/**/*.html'",
    "lint": "ng lint --max-warnings 0",
    "docker:build:image": "docker image build -t metronomy .",
    "docker:tag:image": "cross-conf-env docker tag metronomy:latest metronomy:$npm_package_version"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "rxjs": "~7.5.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.2",
    "@angular-eslint/builder": "13.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "13.0.1",
    "@angular-eslint/schematics": "13.0.1",
    "@angular-eslint/template-parser": "13.0.1",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.1.0",
    "@testing-library/angular": "^11.0.2",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "cross-conf-env": "^1.2.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "import-sort": "^6.0.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "jest": "^27.4.7",
    "jest-preset-angular": "^11.0.1",
    "js-beautify": "^1.14.0",
    "prettier": "^2.5.1",
    "typescript": "~4.5.2",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "importSort": {
    ".ts": {
      "paser": "typescript",
      "style": "eslint"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/src/test.ts"
    ],
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/main.ts",
      "!src/**/polyfills.ts",
      "!src/**/*.module.ts",
      "!src/**/environments/*.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  }
}
